  <script>
function connexionApp() {
    return {
        hasuraEndpoint: 'https://hasura-preprod.maroadmap.com/v1/graphql',
        hasuraAdminSecret: 'newpassword',
        successMessage: false,
countdown: null,

        showForm: false,
        loading: false,
        showPassword: false,
        errorMessage: '',
        form: {
            email: '',
            password: '',
            rememberMe: false
        },

        async hashPassword(password) {
            const encoder = new TextEncoder();
            const data = encoder.encode(password);
            const hash = await crypto.subtle.digest('SHA-256', data);
            return Array.from(new Uint8Array(hash)).map(b => b.toString(16).padStart(2, '0')).join('');
        },

        async submitLogin() {
            this.loading = true;
            this.errorMessage = '';
       


            try {
                const query = `
                    query GetUser($email: String!) {
                        professionals(where: {email: {_eq: $email}}) {
                            id
                            name
                            email
                            job
                            skills
                            password_hash
                        }
                    }
                `;
const variables = { email: this.form.email.toLowerCase().trim() };

const response = await fetch(this.hasuraEndpoint, {
    method: 'POST',
    headers: {
        'Content-Type': 'application/json',
     'x-hasura-admin-secret': this.hasuraAdminSecret // R√¥le configur√© dans Hasura avec permissions limit√©es
    },
    body: JSON.stringify({ query, variables })
});

                const result = await response.json();
               if (!result.data || !result.data.professionals || result.data.professionals.length === 0) {
    this.errorMessage = 'Utilisateur non trouv√©';
    this.loading = false;
    return;
}
const user = result?.data?.professionals?.[0];

if (!user) {
    this.errorMessage = 'Utilisateur non trouv√© ou mauvaise r√©ponse Hasura';
    this.loading = false;
    return;
}

console.log("R√©sultat Hasura :", result);



                

               const inputHash = await this.hashPassword(this.form.password);
if (inputHash !== user.password_hash) {
    this.errorMessage = 'Mot de passe incorrect';
    this.loading = false;
    return;
}

// Connexion r√©ussie ‚Üí on stocke les infos
localStorage.setItem('userData', JSON.stringify(user));
localStorage.setItem('userSkills', JSON.stringify(user.skills));
localStorage.setItem('authToken', 'fake-jwt-token-' + Date.now());

// Affichage message + d√©compte redirection
this.successMessage = "Connexion r√©ussie !";
this.countdown = 3;
const interval = setInterval(() => {
    this.countdown--;
    if (this.countdown <= 0) {
        clearInterval(interval);
        window.location.href = 'pagedashboardpro.html';
    }
}, 1000);
} catch (err) {
    this.errorMessage = 'Erreur de connexion : ' + err.message;
} finally {
    this.loading = false;
}

        }
    }
}
</script>
<div 
  x-show="successMessage" 
  x-transition 
  class="fixed inset-0 flex items-center justify-center z-50"
>
  <div class="bg-white border border-green-500 text-green-700 px-6 py-4 rounded-xl shadow-xl text-lg font-semibold text-center">
    <div x-text="successMessage"></div>
    <div class="mt-2 text-sm text-gray-600">
      Redirection dans <span x-text="countdown"></span> seconde<span x-text="countdown > 1 ? 's' : ''"></span>...
    </div>
  </div>
</div>



